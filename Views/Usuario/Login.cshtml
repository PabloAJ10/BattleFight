@model BattleFight.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<script>
    var menu = document.getElementById("menu");
    menu.style.display = "none";
</script>
<h1>Login</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>

        }

        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="User" class="control-label"></label>
                <input asp-for="User" name="user"class="form-control" required/>
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pass" class="control-label"></label>
                <input asp-for="Pass" name="pass" type="password" class="form-control" required/>
                <span asp-validation-for="Pass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ingresar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


